  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Water temperature changed"
        },
        "hint": {
          "en": "Triggered when the actual water temperature changes"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=dtv+-six-port-valve"
          }
        ],
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Temperature"
            },
            "example": 38.5
          }
        ],
        "id": "valve-temperature-changed"
      }
    ],
    "conditions": [
      {
        "title": {
          "en": "Shower water is running"
        },
        "hint": {
          "en": "Check if water is flowing from any valve"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=dtv+-system-controller"
          }
        ],
        "id": "shower-is-running"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Start shower preset"
        },
        "titleFormatted": {
          "en": "Start shower preset [[preset]]"
        },
        "hint": {
          "en": "Start a saved DTV+ shower preset"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=dtv+-system-controller"
          },
          {
            "type": "number",
            "name": "preset",
            "title": {
              "en": "Preset number"
            },
            "min": 1,
            "max": 12,
            "step": 1,
            "placeholder": {
              "en": "1"
            }
          }
        ],
        "id": "start-preset"
      },
      {
        "title": {
          "en": "Start steam with duration"
        },
        "titleFormatted": {
          "en": "Start steam at [[temperature]]°C for [[duration]] minutes"
        },
        "hint": {
          "en": "Start the steam generator at a specific temperature and duration"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=invigoration-steamer"
          },
          {
            "type": "range",
            "name": "temperature",
            "title": {
              "en": "Temperature (°C)"
            },
            "min": 35,
            "max": 48,
            "step": 1
          },
          {
            "type": "range",
            "name": "duration",
            "title": {
              "en": "Duration (minutes)"
            },
            "min": 1,
            "max": 60,
            "step": 1
          }
        ],
        "id": "start-steam-duration"
      },
      {
        "title": {
          "en": "Stop all shower activity"
        },
        "hint": {
          "en": "Immediately stop all running water and steam"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=dtv+-system-controller"
          }
        ],
        "id": "stop-shower"
      }
    ]
  },
