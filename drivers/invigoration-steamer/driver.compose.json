{
  "name": {
    "en": "Invigoration Steamer"
  },
  "class": "heater",
  "capabilities": [
    "onoff",
    "target_temperature"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 35,
      "max": 48,
      "step": 1
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "settings": [
    {
      "type": "group",
      "label": { "en": "Connection" },
      "children": [
        {
          "id": "address",
          "type": "text",
          "label": { "en": "IP Address" },
          "hint": { "en": "IP address of your Kohler DTV+ controller" },
          "value": ""
        },
        {
          "id": "steamDuration",
          "type": "number",
          "label": { "en": "Default Steam Duration (minutes)" },
          "hint": { "en": "How long the steam generator runs when turned on" },
          "value": 10,
          "min": 1,
          "max": 60
        }
      ]
    }
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}
